<div class="container">
  <h1>Edit User<%= @user.id %></h1>
  <form action="/users/<%= @user.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="name">Name</label>
      <input id="name" class="form-control" type="text" name="user[name]" value="<%= @user.name %>">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" class="form-control" type="text" name="user[email]" value="<%= @user.email %>">
    </div>
    <button type="submit" class="btn btn-default">Update</button>
  </form>
  <a href="/users/<%= @user.id %>" data-method="delete">Delete Account</a>
  <% if flash[:notice] %>
  <% flash[:notice].each do |note| %>
  <p id="notice"><%= note %></p>
  <% end %>
  <% end %>
</div>
